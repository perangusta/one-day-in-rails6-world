<p id="notice"><%= notice %></p>

<%= link_to "Changelogs", changelogs_path %>
<%= link_to "Published changelogs", published_changelogs_path %>

<hr>
<% if @latest_changelog.present? %>
  <div>
    <h2>Latest changelog</h2>

    <div><%= link_to @latest_changelog.title, @latest_changelog %></div>
  </div>

  <hr>
<% end %>

<% if @changelogs_since_last_connection.present? %>
  <div>
    <h2>Changelogs since your last connection</h2>

    <% @changelogs_since_last_connection.each do |changelog| %>
      <div><%= link_to changelog.title, changelog %></div>
    <% end %>
  </div>

  <hr>
<% end %>

<h1>Changelogs</h1>

<table>
  <thead>
    <tr>
      <th>Status</th>
      <th>Contributor</th>
      <th>Title</th>
      <th>Description</th>
      <th>Rich Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%= render @changelogs %>
  </tbody>
</table>

<br>

<%= link_to 'New Changelog', new_changelog_path %>
